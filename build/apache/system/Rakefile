require 'fileutils'

# dependencies:
#   sudo apt install libexpat1-dev libpcre3-dev

pwd = Dir::pwd

install_path = "/usr/local"
work_path = "#{pwd}/work"

apr_ver = '1.7.0'

desc 'apr'
task "apr" do
  FileUtils.mkdir_p(work_path)
  Dir.chdir("#{work_path}") do
    sh "curl -O http://ftp.riken.jp/net/apache//apr/apr-#{apr_ver}.tar.bz2"
    sh "tar jxf apr-#{apr_ver}.tar.bz2"

    Dir.chdir("./apr-#{apr_ver}") do
      sh "./configure"
      sh "make"
      sh "sudo make install"
    end
  end
end


apr_util_ver = "1.6.1"

desc 'apr-util'
task "apr-util" do
  FileUtils.mkdir_p(work_path)
  Dir.chdir("#{work_path}") do
    sh "curl -O http://ftp.riken.jp/net/apache//apr/apr-util-#{apr_util_ver}.tar.bz2"
    sh "tar jxf apr-util-#{apr_util_ver}.tar.bz2"
    Dir.chdir("./apr-util-#{apr_util_ver}") do
      sh "./configure " +
         "--with-apr=/usr/local/apr "
      sh "make"
      sh "sudo make install"
    end
  end
end


# sudo apt install libpcre3-dev
apache_ver = "2.4.39"

desc 'apache'
task 'apache' do
  FileUtils.mkdir_p(work_path)
  Dir.chdir("#{work_path}") do
    sh "curl -O http://ftp.yz.yamagata-u.ac.jp/pub/network/apache//httpd/httpd-#{apache_ver}.tar.bz2"
    sh "tar jxf httpd-#{apache_ver}.tar.bz2"
    Dir.chdir("./httpd-#{apache_ver}") do
      sh "./configure " +
         "--with-apr=/usr/local/apr " +
         "--enable-dav " +
         "--enable-dav-fs " +
         "--enable-dav-lock"
      sh "make"
      sh "sudo make install"
    end
  end
end

apache_home = "#{install_path}/apache2"

task "start" do
  #sh "#{apache_home}/bin/httpd -k start"
  sh "sudo #{apache_home}/bin/apachectl start"
end

task "restart" do
  #sh "#{apache_home}/bin/httpd -k restart"
  sh "sudo #{apache_home}/bin/apachectl restart"
end

task "stop" do
  #sh "#{apache_home}/bin/httpd -k stop"
  sh "sudo #{apache_home}/bin/apachectl stop"
end

task "clean-logs" do
  File.delete("#{apache_home}/logs/access_log") if File.exist?("#{apache_home}/logs/access_log")
  File.delete("#{apache_home}/logs/error_log")  if File.exist?("#{apache_home}/logs/error_log")
end

task "edit-config" do
  sh "vi #{apache_home}/conf/httpd.conf"
end


task "add-config" do
  apache_conf = "#{apache_home}/conf/httpd.conf"

  dav_path = "#{pwd}/dav"
  FileUtils.mkdir_p(dav_path)
  FileUtils.mkdir_p(dav_path + "/uploads")

  puts %Q{DavLockDB "#{dav_path}/var/DavLock"}
  puts %Q{Alias /uploads "#{dav_path}/uploads"}
  puts %Q{}
  puts %Q{<Directory "#{dav_path}/uploads">}
  puts %Q{    Dav On}
  puts %Q{    Require all granted}
  puts %Q{</Directory>}
end

namespace :foo do
  message = '1.7.0'

  task :build do
    puts "exec foo::build"
    puts "exec #{message}"
  end

  task :clean do
    puts "exec foo::clean"
  end
end

